---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div
  class="inline-flex items-center gap-2 mb-8 px-5 py-2.5 rounded-full border border-blue-400/40 dark:border-blue-400/40 bg-blue-100/60 dark:bg-blue-900/40 backdrop-blur-md text-blue-900 dark:text-blue-200 text-sm font-semibold tracking-wider uppercase shadow-lg neon-border animate-fade-in-up"
>
  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
    <path
      fill-rule="evenodd"
      d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
      clip-rule="evenodd"></path>
  </svg>
  <span>{text}</span>
</div>
