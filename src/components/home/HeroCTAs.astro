---
interface CTAButton {
  href: string;
  text: string;
  variant: "primary" | "secondary";
  icon?: string;
}

interface Props {
  buttons: CTAButton[];
  animationDelay?: string;
}

const { buttons, animationDelay = "0.4s" } = Astro.props;
---

<div
  class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up"
  style={`animation-delay: ${animationDelay};`}
>
  {
    buttons.map((button) =>
      button.variant === "primary" ? (
        <a
          href={button.href}
          class="group relative inline-flex items-center justify-center px-10 py-5 text-lg font-bold text-white transition-all duration-300 bg-security-red rounded-full overflow-hidden neon-border-red hover:scale-105 hover:shadow-2xl shadow-red-500/50"
        >
          <span class="absolute inset-0 bg-gradient-to-r from-red-600 to-red-700 opacity-0 group-hover:opacity-100 transition-opacity" />
          <span class="relative flex items-center gap-2">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              />
            </svg>
            {button.text}
            <svg
              class="w-5 h-5 transition-transform group-hover:translate-x-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"
              />
            </svg>
          </span>
        </a>
      ) : (
        <a
          href={button.href}
          class="group inline-flex items-center justify-center px-10 py-5 text-lg font-bold rounded-full border-2 border-security-blue/30 bg-white/20 backdrop-blur-md text-security-blue hover:bg-blue-50 hover:border-security-blue/60 transition-all hover:scale-105 neon-border"
        >
          <span class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-security-blue"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            {button.text}
          </span>
        </a>
      )
    )
  }
</div>
