---
import SocialLink from "./SocialLink.astro";
import ProfilePhoto from "../../assets/ProfilePhoto.jpg";
import { author, getMainSocials, type SocialNetwork } from "../../data/social";

interface Props {
  initials?: string;
  name?: string;
  role?: string;
  socialNetworks?: SocialNetwork[];
}

const {
  name = author.name,
  role = author.role,
  socialNetworks = getMainSocials(),
} = Astro.props;
---

<div class="relative">
  <div
    class="absolute inset-0 bg-security-blue transform rotate-3 rounded-3xl opacity-10"
  >
  </div>
  <div
    class="relative rounded-3xl overflow-hidden shadow-2xl border border-slate-200 dark:border-slate-700 bg-slate-100 dark:bg-slate-800 min-h-[400px] flex items-center justify-center group"
  >
    <div
      class="text-center p-12 transition-transform duration-500 group-hover:scale-105"
    >
      <img
        src={ProfilePhoto.src}
        alt={name}
        class="w-32 h-32 rounded-full mx-auto mb-6 shadow-lg shadow-blue-500/30 object-cover"
        loading="lazy"
      />
      <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">
        {name}
      </h3>
      <p
        class="text-security-blue dark:text-blue-400 font-medium tracking-wide uppercase text-sm mb-6"
      >
        {role}
      </p>
      <div class="flex justify-center gap-4">
        {
          socialNetworks.map((social) => (
            <SocialLink
              href={social.href}
              label={social.label}
              platform={social.platform}
            />
          ))
        }
      </div>
    </div>
  </div>
</div>
