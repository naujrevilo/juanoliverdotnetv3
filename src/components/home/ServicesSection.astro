---
import ServiceCard from "./ServiceCard.astro";
import SectionBadge from "../SectionBadge.astro";

interface Service {
  title: string;
  description: string;
  features: string[];
  icon: string;
  colorScheme: "blue" | "red" | "yellow";
}

interface Props {
  badgeText?: string;
  title?: string;
  subtitle?: string;
  services?: Service[];
}

const {
  badgeText = "Servicios Especializados",
  subtitle = "Protegiendo su infraestructura y activos digitales",
  services = [
    {
      title: "Ethical Hacking",
      description:
        "Simulación de ataques reales para identificar y remediar vulnerabilidades críticas antes de que sean explotadas.",
      features: [
        "Pentesting Web & Mobile",
        "Red Team Operations",
        "Ingeniería Social",
      ],
      icon: "lock",
      colorScheme: "blue" as const,
    },
    {
      title: "Recuperación ante desastres",
      description:
        "Continuidad de negocio (BCP) y recuperación ante desastres (DRP) para resiliencia operativa 24/7.",
      features: [
        "Planear la continuedad del negocio",
        "Estrategias de copias de seguridad y restauración",
        "Respuesta ante incidentes de seguridad",
      ],
      icon: "refresh",
      colorScheme: "red" as const,
    },
    {
      title: "Auditoría de TI y Seguridad",
      description:
        "Evaluación de seguridad para infraestructuras On-Premise/Cloud y cumplimiento normativo.",
      features: [
        "Evaluación de su postura de seguridad",
        "ISO 27001/PCI-DSS",
        "Arquitectura Zero Trust",
      ],
      icon: "cloud",
      colorScheme: "yellow" as const,
    },
    {
      title: "Análisis de Riesgos",
      description:
        "Evaluación integral de vulnerabilidades y amenazas para priorizar inversión en seguridad.",
      features: [
        "Evaluación de Vulnerabilidades",
        "Modelado de amenazas",
        "Evaluación de riesgos",
      ],
      icon: "chart",
      colorScheme: "blue" as const,
    },
    {
      title: "Arquitectura Segura",
      description:
        "Diseño de infraestructuras con seguridad integrada desde la concepción del sistema.",
      features: [
        "Seguridad por diseño",
        "Segmentación de redes",
        "Defensa en profundidad",
      ],
      icon: "layers",
      colorScheme: "red" as const,
    },
    {
      title: "VPN & Acceso Seguro",
      description:
        "Implementación de redes privadas virtuales y gestión de accesos remotos seguros.",
      features: ["VPN Site-to-Site", "Zero Trust Network Access", "MFA & IAM"],
      icon: "shield",
      colorScheme: "yellow" as const,
    },
  ],
} = Astro.props;
---

<section
  class="py-32 bg-slate-50 dark:bg-neutral-900 transition-colors relative overflow-hidden"
>
  <!-- Background Elements -->
  <div class="absolute inset-0 pattern-circuit"></div>
  <div
    class="absolute top-0 right-0 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"
  >
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <SectionBadge text={badgeText} />
      <h2
        class="text-4xl md:text-6xl font-black text-slate-900 dark:text-white mb-6 tracking-tight"
      >
        <span class="gradient-text">Soluciones de</span><br />
        <span class="text-slate-900 dark:text-white">Seguridad 360°</span>
      </h2>
      <p
        class="text-slate-600 dark:text-gray-400 max-w-2xl mx-auto text-xl leading-relaxed"
      >
        {subtitle}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {
        services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            features={service.features}
            icon={service.icon}
            colorScheme={service.colorScheme}
          />
        ))
      }
    </div>

    <!-- Ver todos los servicios -->
    <div class="text-center mt-12">
      <a
        href="/servicios"
        class="inline-flex items-center gap-2 text-security-blue dark:text-blue-400 font-bold hover:underline group"
      >
        Ver catálogo completo de servicios
        <svg
          class="w-5 h-5 transition-transform group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
