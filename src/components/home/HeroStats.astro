---
interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats: Stat[];
  animationDelay?: string;
}

const { stats, animationDelay = "0.3s" } = Astro.props;
---

<div
  class="flex flex-wrap justify-center gap-8 mb-12 animate-fade-in-up"
  style={`animation-delay: ${animationDelay};`}
>
  {
    stats.map((stat) => (
      <div class="text-center">
        <div class="text-4xl font-bold text-security-yellow neon-text">
          {stat.value}
        </div>
        <div class="text-sm text-slate-600 dark:text-blue-300 uppercase tracking-wider mt-1">
          {stat.label}
        </div>
      </div>
    ))
  }
</div>
