---
interface Props {
  title: string;
  subtitle?: string;
  badge?: {
    icon?: string;
    text: string;
  };
}

const { title, subtitle, badge } = Astro.props;
---

<div
  class="docs-hero-wrapper not-content -mx-4 sm:-mx-6 md:-mx-8 lg:-mx-12 mb-12"
>
  <section
    class="relative bg-linear-to-br from-slate-100 via-blue-50 to-slate-100 dark:from-slate-950 dark:via-blue-950 dark:to-slate-950 text-slate-900 dark:text-white overflow-hidden py-16 transition-colors duration-300"
  >
    <!-- Background Effects -->
    <div class="absolute inset-0 pattern-circuit opacity-30"></div>
    <div
      class="absolute top-0 left-1/4 w-96 h-96 bg-security-blue/20 rounded-full blur-3xl animate-float"
    >
    </div>
    <div
      class="absolute bottom-0 right-1/4 w-96 h-96 bg-security-yellow/10 rounded-full blur-3xl animate-float"
      style="animation-delay: 2s;"
    >
    </div>
    <div class="scan-line"></div>

    <div class="relative z-10 container mx-auto px-4">
      <!-- Badge -->
      {
        badge && (
          <div class="flex justify-center mb-6" data-aos="fade-down">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full neon-border bg-slate-900/50 backdrop-blur-sm">
              {badge.icon && (
                <svg
                  class="w-4 h-4 text-security-yellow"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <Fragment set:html={badge.icon} />
                </svg>
              )}
              <span class="text-xs font-bold uppercase tracking-wider">
                {badge.text}
              </span>
            </div>
          </div>
        )
      }

      <!-- Main Title -->
      <div class="text-center mb-6" data-aos="fade-up">
        <h1 class="text-4xl md:text-5xl font-black tracking-tight mb-4">
          <span class="gradient-text-animated">{title}</span>
        </h1>
        {
          subtitle && (
            <p class="text-base md:text-lg text-slate-300 max-w-3xl mx-auto leading-relaxed">
              {subtitle}
            </p>
          )
        }
      </div>
    </div>
  </section>
</div>

<style>
  /* Asegurar que el hero ocupe todo el ancho en el contexto de Starlight */
  .docs-hero-wrapper {
    width: calc(100% + 2rem);
    margin-left: -1rem;
    margin-right: -1rem;
  }

  @media (min-width: 640px) {
    .docs-hero-wrapper {
      width: calc(100% + 3rem);
      margin-left: -1.5rem;
      margin-right: -1.5rem;
    }
  }

  @media (min-width: 768px) {
    .docs-hero-wrapper {
      width: calc(100% + 4rem);
      margin-left: -2rem;
      margin-right: -2rem;
    }
  }

  @media (min-width: 1024px) {
    .docs-hero-wrapper {
      width: calc(100% + 6rem);
      margin-left: -3rem;
      margin-right: -3rem;
    }
  }
</style>
