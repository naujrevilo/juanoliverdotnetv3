---
import SocialLink from "./home/SocialLink.astro";
import { author, getMainSocials, donationLinks } from "../data/social";
import { footerNavSections } from "../data/navigation";
import { getCollection } from "astro:content";
import pkg from "../../package.json";

const currentYear = new Date().getFullYear();
const socialNetworks = getMainSocials();

const isDev = import.meta.env.DEV;
const version = "v" + pkg.version + (isDev ? ".dev" : "");

interface Props {
  serverSideChecks?: boolean;
}

const { serverSideChecks = true } = Astro.props;

const siteStatus = "Todos los sistemas operativos";
const statusColor = "bg-green-500";
const lastUpdated = "02/02/2026";

const docs = await getCollection("docs").catch(() => []);
const hasDocs =
  Array.isArray(docs) && docs.filter((d) => !d.data.draft).length > 0;

const resourceLinks = footerNavSections.resources.filter((link) => {
  if (link.href.startsWith("/docs")) {
    return hasDocs;
  }
  return true;
});
---

<footer
  class="bg-slate-950 text-slate-300 border-t border-slate-800/50 font-sans relative overflow-hidden"
>
  <div class="absolute inset-0 opacity-5 pattern-grid-lg pointer-events-none">
  </div>
  <div
    class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-security-blue to-transparent opacity-50"
  >
  </div>

  <div class="container mx-auto px-4 py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 mb-16">
      <!-- Brand Column (4 cols) -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block mb-6 group">
          <div class="flex items-center gap-3">
            <img
              src="/logo.svg"
              alt="Juan Oliver Logo"
              class="h-10 w-10 object-contain group-hover:opacity-80 transition-opacity"
            />
            <span class="text-2xl font-bold tracking-tight text-white"
              >Juan<span class="text-security-blue"> Oliver</span></span
            >
          </div>
        </a>
        <p class="text-slate-400 text-base leading-relaxed mb-8 max-w-sm">
          {author.bio}
        </p>

        <!-- Social Links -->
        <div class="flex gap-4">
          {
            socialNetworks.map((social) => (
              <SocialLink
                href={social.href}
                label={social.label}
                platform={social.platform}
                variant="footer"
              />
            ))
          }
        </div>

        <!-- Donation Links -->
        {
          donationLinks.length > 0 && (
            <div class="mt-6">
              <h4 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-3">
                Apoya mi contenido
              </h4>
              <div class="flex gap-4">
                {donationLinks.map((link) => (
                  <SocialLink
                    href={link.href}
                    label={link.label}
                    platform={link.platform}
                    variant="footer"
                  />
                ))}
              </div>
            </div>
          )
        }
      </div>

      <!-- Spacer (1 col) -->
      <div class="hidden lg:block lg:col-span-1"></div>

      <div class="lg:col-span-2">
        <h3 class="font-bold text-white text-lg mb-6 relative inline-block">
          Recursos
          <span
            class="absolute -bottom-2 left-0 w-8 h-1 bg-security-blue rounded-full"
          ></span>
        </h3>
        <ul class="space-y-3">
          {
            resourceLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-slate-400 hover:text-white hover:translate-x-1 transition-all duration-200 inline-flex items-center gap-2"
                >
                  <span class="w-1 h-1 bg-slate-600 rounded-full" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Links Column 2 (2 cols) -->
      <div class="lg:col-span-2">
        <h3 class="font-bold text-white text-lg mb-6 relative inline-block">
          Empresa
          <span
            class="absolute -bottom-2 left-0 w-8 h-1 bg-security-red rounded-full"
          ></span>
        </h3>
        <ul class="space-y-3">
          {
            footerNavSections.company.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-slate-400 hover:text-white hover:translate-x-1 transition-all duration-200 inline-flex items-center gap-2"
                >
                  <span class="w-1 h-1 bg-slate-600 rounded-full" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Column (3 cols) -->
      <div class="lg:col-span-3">
        <h3 class="font-bold text-white text-lg mb-6 relative inline-block">
          Contacto Seguro
          <span
            class="absolute -bottom-2 left-0 w-8 h-1 bg-security-yellow rounded-full"
          ></span>
        </h3>
        <div
          class="bg-slate-900/50 rounded-2xl p-6 border border-slate-800 backdrop-blur-sm"
        >
          <p class="text-sm text-slate-400 mb-4">
            ¿Necesita una auditoría o consultoría urgente?
          </p>
          <a
            href="/contacto"
            class="w-full inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-white transition-all duration-200 bg-security-blue rounded-xl hover:bg-blue-700 hover:shadow-lg hover:shadow-blue-900/30 group"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 mr-2 group-hover:animate-pulse"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
              ></path><path d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"
              ></path></svg
            >
            Iniciar Conversación
          </a>

          <div class="mt-4 flex items-center gap-2 text-xs text-slate-500">
            <span class={`w-2 h-2 rounded-full animate-pulse ${statusColor}`}
            ></span>
            {siteStatus} · Última actualización: {lastUpdated}
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Methods & Trust -->
    <div class="border-t border-slate-800/50 py-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h4
            class="text-sm font-bold text-slate-300 uppercase tracking-wider mb-4"
          >
            Medios de Pago Seguros
          </h4>
          <!-- Bold Graphic Resources -->
          <div class="flex flex-col gap-2">
            <!-- Contenedor específico para el UI Kit de Bold usando el método target -->
            <div id="bold-payment-methods"></div>
            <script
              is:inline
              src="https://bold.co/library/ui-kit.js?target=bold-payment-methods&theme=dark"
            ></script>
          </div>
        </div>

        <div class="text-center md:text-right">
          <p class="text-sm text-slate-400 mb-1">
            Tus pagos son procesados de forma segura por <span
              class="font-bold text-white">Bold</span
            >
          </p>
          <p class="text-xs text-slate-500">
            Vigilado Superintendencia Financiera de Colombia
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="border-t border-slate-800 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500"
    >
      <p>&copy; {currentYear} Juan Oliver. Todos los derechos reservados.</p>
      <div class="flex gap-6 items-center">
        {
          footerNavSections.legal.map((link) => (
            <a href={link.href} class="hover:text-slate-300 transition-colors">
              {link.label}
            </a>
          ))
        }
        <span
          class="text-xs text-slate-700 bg-slate-900 px-2 py-0.5 rounded-full border border-slate-800"
          title="System Version"
        >
          v.3.2.11.dev
        </span>
      </div>
    </div>
  </div>
</footer>
