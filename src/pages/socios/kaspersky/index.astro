---
import Layout from "../../../layouts/Layout.astro";
import PageHero from "../../../components/PageHero.astro";
import { Image } from "astro:assets";
import { products } from "../../../data/kaspersky-products";

export const prerender = true;
---

<Layout
  title="Soluciones Kaspersky | Juan Oliver"
  description="Soluciones de ciberseguridad Kaspersky para empresas y hogares. Endpoint Security, EDR y protección avanzada."
  fullWidth={true}
>
  <PageHero
    title="Soluciones Kaspersky"
    subtitle="Protección avanzada para cada etapa de su crecimiento empresarial."
    variant="compact"
  />

  <section class="py-20 bg-slate-50 dark:bg-neutral-900 min-h-[60vh]">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          products.map((product) => (
            <div class="group relative bg-white dark:bg-slate-800 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 border border-slate-100 dark:border-slate-700 flex flex-col h-[420px] overflow-hidden">
              <!-- Default Content (Logo & Name) -->
              <div class="absolute inset-0 p-8 flex flex-col items-center justify-center transition-opacity duration-300 group-hover:opacity-0">
                <div class="h-32 w-full flex items-center justify-center mb-6">
                  <Image
                    src={product.logoDark}
                    alt={product.name}
                    class="max-h-24 w-auto dark:hidden"
                  />
                  <Image
                    src={product.logoLight}
                    alt={product.name}
                    class="max-h-24 w-auto hidden dark:block"
                  />
                </div>

                <h3 class="text-xl font-bold text-slate-900 dark:text-white text-center">
                  {product.name}
                </h3>

                <div class="flex flex-wrap gap-2 justify-center mt-4">
                  {product.platforms.map((platform) => (
                    <span class="text-xs font-medium px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-500 dark:text-slate-400 rounded">
                      {platform}
                    </span>
                  ))}
                </div>
              </div>

              <!-- Hover Content (Description & Button) -->
              <div class="absolute inset-0 p-8 bg-white dark:bg-slate-800 flex flex-col opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10">
                <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-4 text-center">
                  {product.name}
                </h3>

                <p class="text-slate-600 dark:text-slate-300 text-sm mb-6 flex-grow overflow-y-auto leading-relaxed text-center flex items-center">
                  {product.description}
                </p>

                <a
                  href={`https://wa.me/573150646626?text=${encodeURIComponent(`Hola, me interesa solicitar una cotización de ${product.name}`)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center justify-center w-full px-4 py-3 bg-[#25D366] text-white font-bold text-sm rounded-lg hover:bg-[#128C7E] transition-all duration-300 shadow-md hover:shadow-lg hover:-translate-y-0.5"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5 mr-2"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.506-.669-.514-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.876 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.084 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z" />
                  </svg>
                  Cotizar por WhatsApp
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
