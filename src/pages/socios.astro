---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import { partners } from "../data/partners";

export const prerender = true;
---

<Layout
  title="Socios y Alianzas | Juan Oliver"
  fullWidth={true}
  isStatic={true}
  description="Alianzas estratégicas con líderes tecnológicos mundiales como Kaspersky para ofrecer soluciones de ciberseguridad robustas."
>
  <PageHero
    title="Alianzas Estratégicas"
    subtitle="Colaboramos con los líderes tecnológicos mundiales para ofrecer arquitecturas de seguridad robustas y certificadas."
    variant="compact"
  />

  <section class="py-20 bg-slate-50 dark:bg-neutral-900 min-h-[60vh]">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {
          partners.map((partner) => (
            <div class="bg-white dark:bg-slate-800 rounded-2xl p-8 shadow-sm hover:shadow-xl transition-all duration-300 group border border-slate-100 dark:border-slate-700 flex flex-col items-center text-center relative overflow-hidden">
              <div class="absolute top-0 w-full h-1 bg-gradient-to-r from-transparent via-security-blue to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />

              <!-- Logo Area -->
              <div class="h-32 w-full flex items-center justify-center mb-6 p-6 bg-slate-50 dark:bg-slate-900/50 rounded-xl group-hover:bg-white dark:group-hover:bg-slate-800 border border-transparent group-hover:border-slate-100 dark:group-hover:border-slate-700 transition-all duration-300">
                {
                  partner.id === "distribution" ? (
                    <div
                      class="h-16 w-full bg-slate-400 group-hover:bg-security-yellow transition-colors duration-500 opacity-80 group-hover:opacity-100"
                      style={{
                        maskImage: `url(${partner.logo})`,
                        maskRepeat: "no-repeat",
                        maskPosition: "center",
                        maskSize: "contain",
                        WebkitMaskImage: `url(${partner.logo})`,
                        WebkitMaskRepeat: "no-repeat",
                        WebkitMaskPosition: "center",
                        WebkitMaskSize: "contain",
                      }}
                    />
                  ) : (
                    <img
                      src={partner.logo}
                      alt={`Logo de ${partner.name}`}
                      class="max-h-16 max-w-[80%] object-contain filter grayscale group-hover:grayscale-0 transition-all duration-500 opacity-80 group-hover:opacity-100"
                    />
                  )
                }
              </div>

              <!-- Content -->
              <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">
                {partner.name}
              </h3>
              <span class="inline-block px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-xs font-medium rounded-full mb-4 border border-slate-200 dark:border-slate-600">
                {partner.category}
              </span>
              <p class="text-slate-600 dark:text-slate-400 text-sm mb-8 flex-grow leading-relaxed">
                {partner.description}
              </p>

              <!-- Link -->
              <a
                href={partner.localUrl || partner.website}
                target={partner.localUrl ? "_self" : "_blank"}
                rel={partner.localUrl ? undefined : "noopener noreferrer"}
                class="mt-auto inline-flex items-center gap-2 text-security-blue font-semibold text-sm hover:underline group/link"
              >
                {partner.localUrl ? "Ver soluciones" : "Contactar"}
                <svg
                  class="w-4 h-4 transition-transform group-hover/link:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
              </a>
            </div>
          ))
        }
      </div>


    </div>
  </section>
</Layout>
