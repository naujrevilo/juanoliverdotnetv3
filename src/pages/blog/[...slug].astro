<script>
  // Inline SVG for proper dark mode support
  const inlineSvg = () => {
    const img = document.getElementById("hero-image") as HTMLImageElement;
    // Check if image exists and is an SVG (loose check for .svg extension)
    if (img && img.src && img.src.includes(".svg")) {
      fetch(img.src)
        .then((response) => response.text())
        .then((svgText) => {
          const div = document.createElement("div");
          div.innerHTML = svgText;
          const svg = div.querySelector("svg");
          if (svg) {
            // Copy classes
            const currentClass = img.getAttribute("class") || "";
            svg.setAttribute("class", currentClass);

            // Copy styles
            const currentStyle = img.getAttribute("style") || "";
            svg.setAttribute("style", currentStyle);

            // Preserve accessible name if present
            const alt = img.getAttribute("alt");
            if (alt && !svg.hasAttribute("aria-label")) {
              svg.setAttribute("aria-label", alt);
            }
            if (!svg.hasAttribute("role")) {
              svg.setAttribute("role", "img");
            }

            // Auto-detect if SVG needs color inversion for dark mode
            // If it uses CSS variables, it likely handles dark mode itself.
            // If not, apply a filter helper class.
            if (!svgText.includes("var(--")) {
              svg.classList.add("svg-auto-dark");
            }

            // Replace image with SVG
            img.replaceWith(svg);
          }
        })
        .catch((err) => console.error("Error inlining SVG:", err));
    }
  };

  // Run on initial load and View Transition navigations
  document.addEventListener("astro:page-load", inlineSvg);
</script>
