---
import Layout from "../layouts/Layout.astro";

// Página oculta para gestionar el estado del sitio
export const prerender = false;
---

<Layout title="Status Manager" serverSideChecks={false}>
  <div class="container mx-auto px-4 py-20">
    <div class="max-w-md mx-auto bg-white dark:bg-slate-800 p-8 rounded-2xl shadow-xl">
      <h1 class="text-2xl font-bold mb-6 text-slate-900 dark:text-white">
        Gestión de Estado del Sitio
      </h1>
      
      <form method="POST" action="/actions/set-status" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
            Estado Actual
          </label>
          <select 
            name="status" 
            class="w-full px-4 py-2 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white"
          >
            <option value="Todos los sistemas operativos">Todos los sistemas operativos (Verde)</option>
            <option value="Mantenimiento programado">Mantenimiento programado (Rojo)</option>
            <option value="Problemas de rendimiento">Problemas de rendimiento (Rojo)</option>
            <option value="Interrupción parcial">Interrupción parcial (Rojo)</option>
            <option value="Interrupción mayor">Interrupción mayor (Rojo)</option>
          </select>
        </div>

        <button 
          type="submit" 
          class="w-full bg-security-blue hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors"
        >
          Actualizar Estado
        </button>
      </form>

      <div class="mt-8 pt-6 border-t border-slate-200 dark:border-slate-700">
        <p class="text-xs text-slate-500 text-center">
          Esta página es de uso interno. No compartir.
        </p>
      </div>
    </div>
  </div>
</Layout>
