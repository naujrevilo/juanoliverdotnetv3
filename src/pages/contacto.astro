---
import Layout from "../layouts/Layout.astro";
import PageHero from "../components/PageHero.astro";
import { author, getSocialByPlatform } from "../data/social";

export const prerender = true;

const emailSocial = getSocialByPlatform("email");
const linkedinSocial = getSocialByPlatform("linkedin");
---

<Layout title="Contacto | Juan Oliver" fullWidth={true}>
  <PageHero
    title="Contacto Seguro"
    subtitle="¿Necesita una auditoría de seguridad o consultoría especializada? Iniciemos una conversación."
    variant="compact"
    badge={{
      icon: "<path d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'/>",
      text: "Comunicación Cifrada",
    }}
  />

  <section class="py-16 bg-slate-50 dark:bg-neutral-900 min-h-[60vh]">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="glass-card p-8 rounded-3xl" data-aos="fade-right">
          <h2
            class="text-2xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3"
          >
            <span
              class="w-10 h-10 bg-security-blue/10 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-5 h-5 text-security-blue"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                ></path>
              </svg>
            </span>
            Enviar Mensaje
          </h2>

          <form
            action="https://formspree.io/f/YOUR_FORM_ID"
            method="POST"
            class="space-y-6"
          >
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
              >
                Nombre completo
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-xl border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-security-blue focus:border-transparent transition-all"
                placeholder="Tu nombre"
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
              >
                Email corporativo
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-xl border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-security-blue focus:border-transparent transition-all"
                placeholder="tu@empresa.com"
              />
            </div>

            <div>
              <label
                for="subject"
                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
              >
                Tipo de consulta
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-xl border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-security-blue focus:border-transparent transition-all"
              >
                <option value="">Seleccionar...</option>
                <option value="audit">Auditoría de Seguridad</option>
                <option value="pentest">Ethical Hacking / Pentest</option>
                <option value="consulting">Consultoría Cloud</option>
                <option value="incident">Respuesta a Incidentes</option>
                <option value="training">Formación / Training</option>
                <option value="other">Otro</option>
              </select>
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2"
              >
                Mensaje
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 rounded-xl border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white focus:ring-2 focus:ring-security-blue focus:border-transparent transition-all resize-none"
                placeholder="Describe tu proyecto o necesidad de seguridad..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full py-4 px-6 bg-security-blue text-white font-bold rounded-xl hover:bg-blue-700 transition-all hover:shadow-lg hover:shadow-blue-500/25 flex items-center justify-center gap-2"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
              Enviar Mensaje Seguro
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8" data-aos="fade-left">
          <!-- Direct Contact Card -->
          <div class="glass-card p-8 rounded-3xl">
            <h2
              class="text-2xl font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-3"
            >
              <span
                class="w-10 h-10 bg-security-red/10 rounded-lg flex items-center justify-center"
              >
                <svg
                  class="w-5 h-5 text-security-red"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                  ></path>
                </svg>
              </span>
              Contacto Directo
            </h2>

            <div class="space-y-4">
              {
                emailSocial && (
                  <a
                    href={emailSocial.href}
                    class="flex items-center gap-4 p-4 rounded-xl bg-slate-100 dark:bg-slate-800/50 hover:bg-slate-200 dark:hover:bg-slate-700/50 transition-colors group"
                  >
                    <div class="w-12 h-12 bg-security-blue/10 rounded-xl flex items-center justify-center group-hover:bg-security-blue group-hover:text-white transition-colors">
                      <svg
                        class="w-6 h-6 text-security-blue group-hover:text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-slate-500 dark:text-slate-400">
                        Email
                      </p>
                      <p class="font-medium text-slate-900 dark:text-white">
                        {emailSocial.username}
                      </p>
                    </div>
                  </a>
                )
              }

              {
                linkedinSocial && (
                  <a
                    href={linkedinSocial.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-4 p-4 rounded-xl bg-slate-100 dark:bg-slate-800/50 hover:bg-slate-200 dark:hover:bg-slate-700/50 transition-colors group"
                  >
                    <div class="w-12 h-12 bg-[#0077B5]/10 rounded-xl flex items-center justify-center group-hover:bg-[#0077B5] transition-colors">
                      <svg
                        class="w-6 h-6 text-[#0077B5] group-hover:text-white"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                        <rect x="2" y="9" width="4" height="12" />
                        <circle cx="4" cy="4" r="2" />
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-slate-500 dark:text-slate-400">
                        LinkedIn
                      </p>
                      <p class="font-medium text-slate-900 dark:text-white">
                        {linkedinSocial.username}
                      </p>
                    </div>
                  </a>
                )
              }
            </div>
          </div>

          <!-- Response Time Card -->
          <div
            class="glass-card p-6 rounded-3xl border-l-4 border-security-yellow"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-10 h-10 bg-security-yellow/20 rounded-lg flex items-center justify-center shrink-0"
              >
                <svg
                  class="w-5 h-5 text-security-yellow"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-slate-900 dark:text-white mb-1">
                  Tiempo de Respuesta
                </h3>
                <p class="text-sm text-slate-600 dark:text-slate-400">
                  Respondo consultas en un plazo máximo de 24-48 horas
                  laborables. Para emergencias de seguridad, indícalo en el
                  asunto.
                </p>
              </div>
            </div>
          </div>

          <!-- Security Notice -->
          <div
            class="glass-card p-6 rounded-3xl border-l-4 border-security-blue"
          >
            <div class="flex items-start gap-4">
              <div
                class="w-10 h-10 bg-security-blue/20 rounded-lg flex items-center justify-center shrink-0"
              >
                <svg
                  class="w-5 h-5 text-security-blue"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-slate-900 dark:text-white mb-1">
                  Confidencialidad Garantizada
                </h3>
                <p class="text-sm text-slate-600 dark:text-slate-400">
                  Toda la información compartida se trata con estricta
                  confidencialidad bajo acuerdos de NDA cuando sea necesario.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
